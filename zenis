<script>
/* LOGIN */
document.getElementById("loginForm").addEventListener("submit", function(e){
  e.preventDefault();

  let u = document.getElementById("username").value.trim();
  let p = document.getElementById("password").value.trim();

  if(u === "zenis ganteng bet" && p === "zenis 02"){
    document.getElementById("loginWrapper").style.display="none";
    document.getElementById("panelWrapper").style.display="flex";
  } else {
    alert("‚ùå Username atau Password salah anjengg!");
  }
});

/* RANDOM TARGET */
document.getElementById("randomBtn").onclick = () => {
  let rand = "628" + Math.floor(Math.random() * 90000000 + 10000000);
  document.getElementById("targetInput").value = rand;
};

/* ATTACK SIMULATION */
const sendBtn = document.getElementById("sendBtn");
const resetBtn = document.getElementById("resetBtn");
const progressBar = document.getElementById("progressBar");
const simOutput = document.getElementById("simOutput");
const statusText = document.getElementById("statusText");
const panelCard = document.getElementById("panelCard");

function logSim(t, type="info"){
  simOutput.innerHTML += `<span class="log-${type}">${t}</span><br>`;
  simOutput.scrollTop = simOutput.scrollHeight;
}

sendBtn.onclick = () => {
  let target = document.getElementById("targetInput").value.trim();
  let mode = document.getElementById("delaySelect").value;

  if(target === ""){
    logSim("‚ö† Target kosong!", "warn");
    return;
  }

  simOutput.innerHTML="";
  progressBar.style.width="0%";
  statusText.textContent="Status: Mengirim...";
  panelCard.style.animation = "pulse 1s infinite";

  let pct = 0;

  let timer = setInterval(()=>{
    pct += 8;

    if(pct >= 100){
      pct = 100;
      clearInterval(timer);
      statusText.textContent = "Status: Selesai ‚úî";
      panelCard.style.animation = "";
      logSim("‚úî Serangan selesai!", "success");
    }

    progressBar.style.width = pct + "%";
    logSim(`Mengirim paket | Mode: ${mode}`, "info");

  },120);
};

resetBtn.onclick = () => {
  progressBar.style.width="0%";
  simOutput.innerHTML="";
  statusText.textContent="Status: Siap.";
  panelCard.style.animation = "";
};
</script>

